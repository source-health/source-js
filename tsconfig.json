{
  "exclude": ["node_modules", "**/node_modules", "**/dist"],
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "dom", "dom.iterable", "es2015", "es2016", "es2021"],
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "baseUrl": "packages",
    "paths": {
      "@source-health/js-bridge": ["bridge/src"]
    }
  }
}
