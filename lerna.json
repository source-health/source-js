{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "version": "1.0.0-beta.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__testfixtures__/**"
  ],
  "publishConfig": {
    "access": "public"
  }
}