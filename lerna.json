{
  "command": {
    "publish": {
      "allowBranch": "main",
      "bump": "patch",
      "conventialCommits": true,
      "message": "chore(release): Publish"
    }
  },
  "packages": [ "packages/*" ],
  "loglevel": "success",
  "version": "independent",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org",
  "npmClient": "yarn",
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__testfixtures__/**"
  ]
}